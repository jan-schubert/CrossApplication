<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:themes="clr-namespace:CrossApplication.Core.Themes.LightBlue;assembly=CrossApplication.Core.Themes"
                    xmlns:markupExtensions="clr-namespace:CrossApplication.Core.Wpf.Themes.MarkupExtensions">
    <SolidColorBrush
        x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type themes:Colors}, ResourceId=TextColorKey}"
        Color="{markupExtensions:ColorConverterMarkupExtension themes:Colors.TextColor}" />
    <SolidColorBrush
        x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type themes:Colors}, ResourceId=HintTextColorKey}"
        Color="{markupExtensions:ColorConverterMarkupExtension themes:Colors.HintTextColor}" />
    <SolidColorBrush
        x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type themes:Colors}, ResourceId=NavigationBarBackgroundColorKey}"
        Color="{markupExtensions:ColorConverterMarkupExtension themes:Colors.NavigationBarBackgroundColor}" />
</ResourceDictionary>