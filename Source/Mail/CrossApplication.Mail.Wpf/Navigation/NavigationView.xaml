<UserControl x:Class="CrossApplication.Mail.Wpf.Navigation.NavigationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:navigation="clr-namespace:CrossApplication.Mail.Wpf.Navigation"
             xmlns:controls="clr-namespace:CrossApplication.Core.Wpf.Themes.Controls;assembly=CrossApplication.Core.Wpf.Themes"
             xmlns:viewModels1="clr-namespace:CrossApplication.Core.Wpf.Common.ViewModels;assembly=CrossApplication.Core.Wpf.Common"
             mc:Ignorable="d"
             viewModels1:ViewModelLocator.AutoWireViewModel="{x:Type navigation:NavigationViewModel}"
             d:DataContext="{d:DesignInstance navigation:NavigationViewModel}">
    <TreeView ItemsSource="{Binding NavigationItems}">
        <TreeView.ItemTemplate>
            <DataTemplate>
                <controls:TextControl Content="{Binding Label}" />
            </DataTemplate>
        </TreeView.ItemTemplate>
    </TreeView>
</UserControl>