<fluent:RibbonTabItem x:Class="CrossApplication.Mail.Wpf.Shell.RibbonStartView"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:fluent="urn:fluent-ribbon"
                      xmlns:properties="clr-namespace:CrossApplication.Wpf.Common.Properties;assembly=CrossApplication.Wpf.Common"
                      xmlns:common="clr-namespace:CrossApplication.Wpf.Common;assembly=CrossApplication.Wpf.Common"
                      mc:Ignorable="d"
                      Header="{common:Localization ResourceType={x:Type properties:Resources}, Name=ShellRibbonTabStart}">
    <fluent:RibbonGroupBox Header="{common:Localization ResourceType={x:Type properties:Resources}, Name=ShellRibbonTabStartGroupNew}">
        <fluent:Button Header="{common:Localization ResourceType={x:Type properties:Resources}, Name=ShellRibbonTabStartGroupNewNewMail}" />
    </fluent:RibbonGroupBox>
</fluent:RibbonTabItem>