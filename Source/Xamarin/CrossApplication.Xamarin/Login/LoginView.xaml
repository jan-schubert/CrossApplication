<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CrossApplication.Xamarin.Login.LoginView">

    <ListView ItemsSource="{Binding AuthProviders}" SelectedItem="{Binding SelectedAuthProvider}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <Grid Height="48">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="48" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

<!--                    <iconPacks:PackIconMaterial Width="20"-->
<!--                                                Height="20"-->
<!--                                                HorizontalAlignment="Center"-->
<!--                                                VerticalAlignment="Center"-->
<!--                                                Kind="{Binding Glyph, Converter={converter:StringToEnumConverter}}" />-->
                    <Label Grid.Column="1" Text="{Binding Name}" />
                </Grid>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>